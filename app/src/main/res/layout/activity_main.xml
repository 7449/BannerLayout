<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIMPLE" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GUIDE" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_refresh_simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REFRESH" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_image_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IMAGE_MANAGER" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_transformer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transformer" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_issues_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="issues 10" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_issues_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="issues 12" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_method_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="METHOD TEST" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_java"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JAVA" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>