<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".recyclerview.RecyclerViewActivity" />
        <activity
            android:name=".banner.GuideActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".banner.DisplayActivity" />
        <activity android:name=".banner.TransformerActivity" />
        <activity android:name="com.example.issues.Issues10Activity" />
        <activity android:name="com.example.issues.Issues12Activity" />
        <activity android:name="com.example.issues.Issues13Activity" />
    </application>

</manifest>